.page-header
  %h1= build.full_title
  %small
    By:
    = link_to build.user.username, user_path(build.user.username)
  - if user_signed_in? && current_user.id == build.user_id
    = link_to (fa_icon "edit") + " Edit",edit_build_path(build)
    = link_to  (fa_icon "trash-o") + " Delete", build, method: :delete, data: { confirm: 'Are you sure you want to delete this?' }
  %br
  %span
    = link_to (fa_icon "thumbs-up 2x"), like_build_path(@build), method: :put 
    = link_to (fa_icon "thumbs-down 2x"), dislike_build_path(@build), method: :put
%p
  Build Type:
  = build.build_type

= markdown(build.body)
%br
- unless build.replays.empty?
  %h3 Replays/VODs
  = markdown(build.replays)
%br

= render 'related'


