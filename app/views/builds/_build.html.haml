.page-header
  %h1= build.full_title
  - if user_signed_in? && current_user.id == build.user_id
    = link_to 'Edit', edit_build_path(build)
    = link_to 'Delete', build, method: :delete, data: { confirm: 'Are you sure you want to delete this?' }

= markdown(build.body)
%br
- unless build.replays.empty?
  %h3 Replays/VODs
  = markdown(build.replays)
%br

